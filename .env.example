# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
CHANNEL_ID=@your_channel_name_or_id

# Discord Configuration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_ENABLED=true

# User Access Control (comma-separated list of Telegram user IDs)
AUTHORIZED_USERS=123456789,987654321

# Bot Owner ID (for admin-only commands like manual updates)
OWNER_ID=123456789

# Posting Schedule Configuration
DEFAULT_CRON_SCHEDULE=0 */1 * * *
IMAGES_PER_INTERVAL=1

# Queue Configuration
# QUEUE_FILE_PATH=/path/to/custom/queue.json

# Media Cache Configuration
# CACHE_DIR=/path/to/custom/cache/directory
# MAX_CACHE_AGE_DAYS=15

# Bluesky Configuration
BLUESKY_SERVICE=https://bsky.social

# Development Mode
# Set to true to disable auto-updates and enable development features
DEV_MODE=false

# API Keys
# Weasyl API Key for accessing their API
WEASYL_API_KEY=your_weasyl_api_key_here